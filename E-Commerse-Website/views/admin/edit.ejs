<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>edit</title>
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="images/favicon.png">
    <!-- Custom Stylesheet -->
    <link href="admin/css/style.css" rel="stylesheet">

</head>

<body>

    <!--*******************
        Preloader start
    ********************-->
    
    <!--*******************
        Preloader end
    ********************-->

    
    <!--**********************************
        Main wrapper start
    ***********************************-->
    <div id="main-wrapper">

        <!--**********************************
            Nav header start
        ***********************************-->
        <!--**********************************
            Nav header end
        ***********************************-->

        <!--**********************************
            Header start
        ***********************************-->
        <%-include('header')-%>
        <!--**********************************
            Header end ti-comment-alt
        ***********************************-->

        <!--**********************************
            Sidebar start
        ***********************************-->
        <%-include('sidebar')-%>
        <!--**********************************
            Sidebar end
        ***********************************-->

        <!--**********************************
            Content body start
        ***********************************-->
        <div class="content-body">

            <div class="row page-titles mx-0">
                <div class="col p-md-0">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/main">Dashboard</a></li>
                        <li class="breadcrumb-item active"><a href="/main">Home</a></li>
                    </ol>
                </div>
            </div>
            <!-- row -->

            <div class="container-fluid">
                <div class="row justify-content-center">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="form-validation">
                                    <form class="form-valide" action="/update" method="post" enctype="multipart/form-data">
                                        <h2 style="text-align: center;"> Edit Cloth Details</h2> <br>
                                       
                                        <div class="form-group row">
                                            <input type="hidden" name="id" value="<%=data.id%>">
                                            <label class="col-lg-2 col-form-label" for="val-email">Category Product Name <span class="text-danger">*</span>
                                            </label> &nbsp;&nbsp;&nbsp;&nbsp;
                                            <select  class="form-control"  style="width: 150px;" name="" id="">
                                                <option value="">select category</option>
                                                <option value="">Women</option>   
                                                <option value="">Men</option>   
                                                <option value="">Child</option>   
                                            </select>

                                            <div class="col-lg-6">
                                                <input type="text" class="form-control" value="<%=data.product%>" id="val-email" name="product" placeholder="Enter a Category Product Name">
                                            </div>
                                        </div>
                                        
                                        <div class="form-group row">
                                            <label class="col-lg-2 col-form-label" for="val-email">Brand Name <span class="text-danger">*</span>
                                            </label>
                                            <div class="col-lg-8">
                                                <input type="text" class="form-control" value="<%=data.brand%>" id="val-email" name="brand" placeholder="Enter a Brand Name">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-lg-2 col-form-label" for="val-password"> Cloth size <span class="text-danger">*</span>
                                            </label>
                                            <div class="col-lg-8">
                                                <input type="text" class="form-control" value="<%=data.size%>" id="val-password" name="size" placeholder="Enter a Cloth Size">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-lg-2 col-form-label" for="val-password"> Cloth Image <span class="text-danger">*</span>
                                            </label>
                                            <div class="col-lg-8">
                                                <input type="file" value="<%=data.image%>" class="form-control" id="val-password" name="image">
                                                 <br> <img src="<%=data.image%>" alt="" height="100px" width="100px">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-lg-2 col-form-label" for="val-confirm-password">Cloth Price<span class="text-danger">*</span>
                                            </label>
                                            <div class="col-lg-8">
                                                <input type="number" class="form-control" value="<%=data.price%>" id="val-confirm-password" name="price" placeholder="Enter a Cloth Price">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-lg-2 col-form-label" for="val-suggestions">Description <span class="text-danger">*</span>
                                            </label>
                                            <div class="col-lg-8">
                                                <input class="form-control" id="val-suggestions" value="<%=data.description%>" name="description" rows="3" placeholder="Enter a Cloth Description">
                                            </div>
                                        </div>
                                            
                                        <div class="form-group row">
                                            <div class="col-lg-8 ml-auto">
                                                <button type="submit" class="btn btn-primary">Submit</button>
                                                <button type="" class="btn btn-primary"><a href="/viewdata" style="text-decoration: none; color: white;">Show Data</a></button>

                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- #/ container -->
        </div>
        <!--**********************************
            Content body end
        ***********************************-->
        
        
        <!--**********************************
            Footer start
        ***********************************-->
        <%-include('footer')-%>
        <!--**********************************
            Footer end
        ***********************************-->
    </div>
    <!--**********************************
        Main wrapper end
    ***********************************-->

    <!--**********************************
        Scripts
    ***********************************-->
    <script src="plugins/common/common.min.js"></script>
    <script src="js/custom.min.js"></script>
    <script src="js/settings.js"></script>
    <script src="js/gleek.js"></script>
    <script src="js/styleSwitcher.js"></script>

    <script src="./plugins/validation/jquery.validate.min.js"></script>
    <script src="./plugins/validation/jquery.validate-init.js"></script>

</body>

</html>